<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_checked= "false">
        <shape
            android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#d4b6b6b6" />
            <solid android:color="@android:color/transparent" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape
            android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/buttonBoard" />
            <solid android:color="@android:color/transparent" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</selector>


